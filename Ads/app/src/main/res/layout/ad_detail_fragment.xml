<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.amayasan.ads.viewmodel.AdDetailViewModel" />
    </data>

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.AdDetailFragment">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/standard_padding">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/vProductThumbnail"
                    android:layout_width="@dimen/thumbnail_size_large"
                    android:layout_height="@dimen/thumbnail_size_large"
                    android:background="@color/colorImageBackground"
                    app:imageUrl="@{viewmodel.ad.productThumbnail}"/>

                <TextView
                    android:id="@+id/vProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/standard_padding"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:text="@{viewmodel.ad.productName}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/description" />

                <TextView
                    android:id="@+id/vProductDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.productDescription}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/product_id" />

                <TextView
                    android:id="@+id/vProductId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Long.toString(viewmodel.ad.productId)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/app_id" />

                <TextView
                    android:id="@+id/vAppId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.appId}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/privacy_policy" />

                <TextView
                    android:id="@+id/vAppPrivacyPolicyUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:autoLink="web"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.appPrivacyPolicyUrl}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/average_rating" />

                <TextView
                    android:id="@+id/vAverageRatingImageUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:autoLink="web"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.averageRatingImageUrl}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/bid_rate" />

                <TextView
                    android:id="@+id/vBidRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.bidRate}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/billing_type" />

                <TextView
                    android:id="@+id/vBillingTypeId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Integer.toString(viewmodel.ad.billingTypeId)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/call_to_action" />

                <TextView
                    android:id="@+id/vCallToAction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.callToAction}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/display_order" />

                <TextView
                    android:id="@+id/vCampaignDisplayOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Integer.toString(viewmodel.ad.campaignDisplayOrder)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/campaign_id" />

                <TextView
                    android:id="@+id/vCampaignId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Long.toString(viewmodel.ad.campaignId)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/campaign_type_id" />

                <TextView
                    android:id="@+id/vCampaignTypeId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Integer.toString(viewmodel.ad.campaignTypeId)}"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/category" />

                <TextView
                    android:id="@+id/vCategoryName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.categoryName}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/click_proxy" />

                <TextView
                    android:id="@+id/vClickProxyUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:autoLink="web"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.clickProxyUrl}"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/creative_id" />

                <TextView
                    android:id="@+id/vCreativeId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Long.toString(viewmodel.ad.creativeId)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/home_screen" />

                <TextView
                    android:id="@+id/vHomeScreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Boolean.toString(viewmodel.ad.homeScreen)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/min_os_version" />

                <TextView
                    android:id="@+id/vMinOSVersion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.minOSVersion}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/impression_tracking" />

                <TextView
                    android:id="@+id/vImpressionTrackingUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:autoLink="web"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.impressionTrackingUrl}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/random_pick" />

                <TextView
                    android:id="@+id/vIsRandomPick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Boolean.toString(viewmodel.ad.randomPick)}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/number_of_ratings" />

                <TextView
                    android:id="@+id/vNumberOfRatings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{viewmodel.ad.numberOfRatings}" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/small_padding"
                    android:text="@string/rating" />

                <TextView
                    android:id="@+id/vRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="@dimen/small_padding"
                    android:text="@{Float.toString(viewmodel.ad.rating)}" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</layout>